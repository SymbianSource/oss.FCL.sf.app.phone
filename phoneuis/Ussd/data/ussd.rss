    editingWindow = 7;     // From LAF
    characterCase = EAknEditorCharactersUpperCase;
    justification = EAknEditorAlignLeft;
    allowedToMoveInsertionPoint = 1;   // From LAF
    cursorYesNo = 1;                   // From LAF
    overflowYesNo = 0;                 // From LAF
    }


            
